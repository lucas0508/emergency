<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/base_title_layout"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这是一个标题"
                android:textColor="#ff333333"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-12-10"
                android:textColor="#ffc0c5cc"
                android:textSize="12sp"
                />

            <View
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:background="#EEEEEE"
                android:layout_height="1dp"/>

            <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:id="@+id/detail_player"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这是内容介绍这是内容介绍这是内容介绍这是内容介绍这是内容介绍这是内容介绍这是内容介绍这是内容介绍这是内容介绍这是内容介绍这是内容介绍这是内容介绍这是"
                android:textColor="#ff626366"
                android:textSize="16sp"
                />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</LinearLayout>