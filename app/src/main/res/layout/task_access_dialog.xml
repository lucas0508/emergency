<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <TextView
        android:id="@+id/task_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/teal_200"
        android:textSize="109px" />

    <LinearLayout
        android:id="@+id/star_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_grade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/task_star1"
            android:layout_width="104px"
            android:layout_height="104px"
            android:layout_marginTop="49px"
            android:src="@mipmap/task_star_dark" />

        <ImageView
            android:id="@+id/task_star2"
            android:layout_width="104px"
            android:layout_height="104px"
            android:layout_marginLeft="29px"
            android:src="@mipmap/task_star_dark" />

        <ImageView
            android:id="@+id/task_star3"
            android:layout_width="104px"
            android:layout_height="104px"
            android:layout_marginLeft="29px"
            android:layout_marginTop="49px"
            android:src="@mipmap/task_star_dark" />

    </LinearLayout>

    <TextView
        android:id="@+id/task_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/star_all"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7px"
        android:textColor="@color/teal_200"
        android:text="21"
        android:textSize="42sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_score"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42px"
        android:orientation="horizontal">

        <ImageView
            android:visibility="gone"
            android:id="@+id/task_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/photo_back" />

        <ImageView
            android:id="@+id/task_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/photo_back" />


    </LinearLayout>

</RelativeLayout>